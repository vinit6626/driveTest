    <!-- form start -->
    <h4 class="text-center" style="margin-top: 15px; color:<%= color %> ; "><%= msg %></h4>
    <form name="myForm" action="/driveTest/add_appointment" method="post" class="container userForm"
        style="margin-left: 450px;">
        <h3>Add Appointment </h3>
        <h5 class="mb10"><sub>All credentials are mandatory.</sub></h5>
        <h5 class=""><sub>Check avability select date only.</sub></h5>

        <div class="col-sm-5">
            <label for="exampleInputEmail1" class="form-label">Select Date</label>
            <input type="date" class="form-control" id="exampleInputEmail1" name="date"
                aria-describedby="emailHelp" required>
            </div>
        </div>
        <div class="col-sm-4">
            <label for="exampleInputPassword1" class="form-label">Select Timing</label>
            <input type="time" class="form-control" min="09:00" max="16:00" name="time"
                id="exampleInputPassword1" list="avail" >
            <datalist id="avail">
                <option value="09:00">
                <option value="09:30">
                <option value="10:00">
                <option value="10:30">
                <option value="11:00">
                <option value="11:30">
                <option value="12:00">
                <option value="12:30">
            </datalist>
        </div>
        <div class="form-group row">
            <div class="col-sm-2" style="margin-left: 20px; margin-top: 20px;">
                <input type="submit" class="btn btn-primary" id="submit" value="Submit">
            </div>

        </div>
    </form>

