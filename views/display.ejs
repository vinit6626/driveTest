    <!-- dashboard container start -->
    <div class="dashboard bg-dark">
      <div class="headingDiv">
          <h1 class="heading1">
             All Drivers Details
          </h1>
          <h4 class="heading4">DriveTest Booking Kiosk</h4>
      </div>
  </div>
  <div>
    <table class="table" >
        <thead>
          <% if(details.length >=1) {%>

          <tr>
            <th>#</th>
            <th scope="col">FName</th>
            <th scope="col">LName</th>
            <th scope="col">Email</th>
            <th scope="col">Age</th>
            <th scope="col">DOB</th>
            <th scope="col">License</th>
            <th scope="col">CarCompany</th>
            <th scope="col">CarModel</th>
            <th scope="col">PlateNumber</th>
            <th scope="col">CarYear</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i =0; i< details.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= details[i].fName %></td>
            <td><%= details[i].lName %></td>
            <td><%= details[i].email %></td>
            <td><%= details[i].age %></td>
            <td><%= details[i].dob %></td>
            <td><i class="fa fa-eye-slash" aria-hidden="true"></i></td>
            <td><%= details[i].carCompany %></td>
            <td><%= details[i].carModel %></td>
            <td><%= details[i].plateNumber %></td>
            <td><%= details[i].carYear %></td>
            <td><a href="/driveTest/delete/<%= details[i]._id %>" class="btn btn-danger">Delete</a></td>
          </tr>
          <% } %>
          <% }else{ %>
            <center>
            <h3>No data found</h3>
          </center>
          <% } %>

        </tbody>
      </table>
    </div>
