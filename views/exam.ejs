    <!-- form start -->
    <form name="myForm" action="/driveTest/result" method="post" class="container userForm"
        style="width:50%; margin-left: 450px; margin-top: 30px;">
        <h3>Driver Details</h3>

        <div class="col-sm-5">
          
            
        </div>
        <div class="form-group">
            <label for="exampleInputEmail2">  <img src="/images/user.jpeg" alt="" style="width:150px; border-radius: 10%;"></label>
            
        </div>
        <div class="form-group">
            <label for="Name"><b>First Name</b></label>
            <label for="Name" style="margin-left: 50px;"><%= user.fName %></label>
            <label for="Name" style="margin-left: 50px; display: none;"><%= user._id %></label>
        </div>
        <div class="form-group">
            <label for="lName"><b>Last Name</b></label>
            <label for="lName" style="margin-left: 50px;"><%= user.lName %></label>
        </div>
        <br><br>
        <h3>Mark the point</h3>
        <div class="form-group">
            <label for="Name"><b>Parallel Parking</b></label>
            <label for="Name" style="margin-left: 50px; margin-top: 20px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Parking" id="Parking" checked>
                      <label class="form-check-label" for="Parking">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Parking" id="Parking">
                      <label class="form-check-label" for="Parking">Fail</label>
                    </div>
                  </div>
            </label>
        </div>

        <div class="form-group">
            <label for="Name"><b>Traffic Check</b></label>
            <label for="Name" style="margin-left: 65px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Traffic" id="Traffic" checked>
                      <label class="form-check-label" for="Traffic">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Traffic" id="Traffic">
                      <label class="form-check-label" for="Traffic">Fail</label>
                    </div>
                  </div>
            </label>
        </div>


        <div class="form-group">
            <label for="Name"><b>Mirror Check</b></label>
            <label for="Name" style="margin-left: 67px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Mirror" id="flexRadioDefault1" checked>
                      <label class="form-check-label" for="flexRadioDefault1">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Mirror" id="flexRadioDefault2">
                      <label class="form-check-label" for="flexRadioDefault2">Fail</label>
                    </div>
                  </div>
            </label>
        </div>

        <div class="form-group">
            <label for="Name"><b>3Point Turn</b></label>
            <label for="Name" style="margin-left: 78px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Turn" id="Turn" checked>
                      <label class="form-check-label" for="Turn">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Turn" id="Turn">
                      <label class="form-check-label" for="Turn">Fail</label>
                    </div>
                  </div>
            </label>
        </div>

        <div class="form-group">
            <label for="Name"><b>Express Way</b></label>
            <label for="Name" style="margin-left: 68px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Express" id="Express" checked>
                      <label class="form-check-label" for="Express">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Express" id="Express">
                      <label class="form-check-label" for="Express">Fail</label>
                    </div>
                  </div>
            </label>
        </div>

        <div class="form-group">
            <label for="Name"><b>Speed Control</b></label>
            <label for="Name" style="margin-left: 55px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Speed" id="Speed" checked>
                      <label class="form-check-label" for="Speed">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Speed" id="Speed">
                      <label class="form-check-label" for="Speed">Fail</label>
                    </div>
                  </div>
            </label>
        </div>

        <div class="form-group">
            <label for="Name"><b>Intersection</b></label>
            <label for="Name" style="margin-left: 71px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Intersection" id="Intersection" checked>
                      <label class="form-check-label" for="Intersection">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Intersection" id="Intersection">
                      <label class="form-check-label" for="Intersection">Fail</label>
                    </div>
                  </div>
            </label>
        </div>

        <div class="form-group">
            <label for="Name"><b>Pedestrian Check</b></label>
            <label for="Name" style="margin-left: 27px;">
                <div class="d-flex flex-row">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="radio" name="Pedestrian" id="Pedestrian" checked>
                      <label class="form-check-label" for="Pedestrian">Pass</label>
                    </div>
                    <div class="form-check" style="margin-left: 30px;">
                      <input class="form-check-input" type="radio" name="Pedestrian" id="Pedestrian">
                      <label class="form-check-label" for="Pedestrian">Fail</label>
                    </div>
                  </div>
            </label>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1" class="form-label">Overall</label>
          <!-- <div class="col-sm-6"> -->

              <select name="overall" class="form-control"  id="overall" style="
                  width: 28%;
                  margin-bottom: 15px;">
                  <option value="Pass">Pass</option>
                  <option value="Fail">Fail</option>
              </select>
              <!-- </div> -->
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1" class="form-label">Comments</label>
            <!-- <textarea class="form-control" id="exampleInputEmail1" placeholder="Add your comments for driver" name="comment" rows="3" cols="30"></textarea> -->
            <textarea class="form-control" id="exampleInputEmail1" placeholder="Add your comments for driver" name="comment" rows="5" style="width: 320px;"></textarea>



            </div>
      </div>
        

        <div class="form-group row">
            <div class="col-sm-2" style="margin-left: 20px; margin-top: 20px;">
                <input type="submit" class="btn btn-primary" id="submit" value="Submit">
            </div>

        </div>
    </form>

  